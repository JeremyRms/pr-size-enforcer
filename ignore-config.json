{
  "max_loc": 500,
  "ignored_suffixes": [
    ".lock",
    ".snap",
    ".min.js",
    ".min.css",
    ".map",
    ".d.ts"
  ],
  "ignored_files": [
    "package-lock.json",
    "yarn.lock",
    "pnpm-lock.yaml",
    "Cargo.lock",
    "poetry.lock"
  ],
  "ignored_patterns": [
    "**/*.lock",
    "**/*.snap",
    "**/*.min.js",
    "**/*.min.css",
    "**/*.map",
    "**/*.d.ts",
    "**/vendor/**",
    "**/*.mod",
    "**/*.sum",
    "**/.golangci.yml",
    "**/.golangci.toml",
    "**/.golangci.json",
    "**/pnpm-lock.yaml",
    "**/.megalinter.yml",
    "**/.megalinter.json",
    "**/.megalinter.toml",
    "**/build/**",
    "**/dist/**",
    "**/coverage/**",
    "**/node_modules/**",
    "**/sonar-project.properties",
    "**/.sonarcloud.properties",
    "**/.sonarcloud.yml",
    "**/.sonarcloud.yaml",
    "**/test-results/**",
    "**/debug.log",
    "**/debug/**",
    "**/debugger.log",
    "**/debugger/**"
  ]
}
