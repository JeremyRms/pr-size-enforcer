{
  "name": "pr-size-enforcer",
  "version": "1.0.0",
  "description": "GitHub App to automatically close pull requests that exceed a configurable size threshold",
  "main": "index.js",
  "scripts": {
    "start": "probot run ./index.js",
    "dev": "nodemon --exec 'probot run ./index.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "github-app",
    "probot",
    "pull-request",
    "code-review",
    "automation"
  ],
  "author": "Jeremy Lamit",
  "license": "MIT",
  "dependencies": {
    "probot": "^12.3.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JeremyRms/pr-size-enforcer.git"
  }
}
